<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/welcome_intro" android:textColor="@drawable/black"></TextView>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Spinner android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/SpinnerLdapConfig" android:minWidth="270dip"></Spinner>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/BtnConnect"
			android:text="@string/connect"></Button>
	</LinearLayout>




<LinearLayout android:id="@+id/LinearLayout02" android:orientation="horizontal" android:layout_marginLeft="100dip" android:layout_height="92dp" android:layout_width="wrap_content">
    <Button android:width="50dip" android:layout_width="wrap_content" android:layout_margin="1dip" android:text="@string/btn_new" android:layout_height="wrap_content" android:id="@+id/BtnNew"></Button>
    <Button android:width="50dip" android:layout_width="wrap_content" android:layout_margin="1dip" android:text="@string/btn_modify" android:layout_height="wrap_content" android:id="@+id/BtnModify"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BtnDelete" android:text="@string/btn_delete" android:layout_margin="1dip" android:width="50dip"></Button>
</LinearLayout>
</LinearLayout>
